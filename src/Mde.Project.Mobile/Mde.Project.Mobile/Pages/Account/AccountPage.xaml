<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mde.Project.Mobile.ViewModels"
             x:Class="Mde.Project.Mobile.Pages.AccountPage"
             Title="{Binding Title}"
             x:DataType="viewmodels:AccountViewModel">
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="DarkSlateGray">
            <ScrollView HorizontalOptions="Center">
                <StackLayout Style="{StaticResource FormLayout}">
                    <BoxView HeightRequest="10"/>
                    <Frame CornerRadius="100"
                           HeightRequest="100"
                           WidthRequest="100"
                           HasShadow="True"
                           HorizontalOptions="Center"
                           BackgroundColor="Transparent"
                           IsClippedToBounds="True"
                           Padding="0">
                        <Image Source="default_avatar_icon.png"/>
                    </Frame>

                    <Label Text="Email:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding Email}"/>

                    <Label Text="City:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding City}"/>

                    <Label Text="Date of birth:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding BirthDate, StringFormat='{0: dd/MM/yyyy}'}"/>

                    <Label Text="Address:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding Address}"/>

                    <Label Text="Full name:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding FullName}"/>

                    <Label Text="Battle.Net Id:"
                           Style="{StaticResource FormLabel}"/>
                    <Label Text="{Binding BattleNetId}"/>

                    <!--<Button x:Name="btnEdit" Text="Edit info" Clicked="btnEdit_Clicked"/>
                    <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"/>
                    <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked"/>-->
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>